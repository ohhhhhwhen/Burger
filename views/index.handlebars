<ul>
    {{#each burgers}}
    {{#unless devoured}}
    <li>
        <p>{{this.id}} {{this.burger_name}} </p>
        <button data-id="{{this.id}}" data-devoured="{{this.devoured}}" class="devour">Devour Burger</button>
    </li>
    {{/unless}}
    {{/each}}
</ul>

<ul>
    {{#each burgers}}
    {{#if devoured}}
    {{/if}}
    {{/each}}
</ul>

<h2>You Name it We Make It</h2>
<form class="create-form">

    <div class="form-group">
        <label for="newBurger">Burger Name:</label>
        <input type="text" id="newBurger" name="name">
    </div>

    <button type="submit">Add Burger</button>
</form>